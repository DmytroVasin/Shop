<li class="<%= is_last_on_page(product_counter) %>">
  <div class="productbrand">
    <div class="title">
      <h2>
        <%= product.brand_name %>
      </h2>
    </div>
  </div>

  <div class="special_colors" data-item-id="<%= product.id %>" >
    <% product.colours.each do |color| %>
      <div class="color_field <%= color.main %>"></div>
    <% end %>
  </div>

  <%= link_to image_tag( show_list_image(product), class: 'productimg'), product_path(product), class: 'productlinkimg' %>

  <div class="productinfo">
    <div class="paddingwrapper">
      <div class="title">
        <h2>
          <%= link_to regulate_length(product.title), product_path(product) %>
        </h2>
      </div>
      <div class="price">
        Цена: <%= product.price %>грн.
        <span class="old_price"><%= product.old_price %>грн.</span>
      </div>
    </div>
  </div>
</li>

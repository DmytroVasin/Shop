<%= form_tag method: 'get', id: 'form_sort' do %>

  <div id="menu_bar">
    <div id="breadcrumb">
      <ul>
        <li><a href="/">На главную</a></li>
        <li>&raquo; Товары</li>
      </ul>
      <div class="clear"></div>
    </div>

    <%= render 'menu_nav' %>
  </div>

  <div id="items_bar">
    <div id="sort_bar">
      <div class="class_name">
        Каталог:
      </div>
      <div class="sort">
        Сортировать по:

        <%= select_tag(:sort_by, options_for_select(@sort_hash, params[:sort_by]),
                       class: 'sortdropdown',
                       include_blank: true) %>

      </div>
      <div class="clear"></div>
      <div class="underline"></div>
    </div>

    <div id="items">
      <ul>
        <div id='products_displaying'>
          <!-- Block with products... -->
        </div>
      </ul>
    </div>
    <div id='hidden_loading'></div>
  </div>
<% end %>
<div class="clear"></div>

<div id='hidden_element'><%= paginate @products %></div>

<div id="ednless_paginator">Показать еще...</div>
<div class="clear"></div>

<script type="text/javascript">
  if ( $('.pagination ul li').length === 0 || $('.pagination ul li').last().hasClass('disabled') ) {
    $('#ednless_paginator').remove();
  }

  setTimeout(function(){
    changeMeter();
  }, 1000);

  // Adding Spinner
  var spinner = new Spinner(opts).spin();
  $('#hidden_loading').append(spinner.el);
</script>

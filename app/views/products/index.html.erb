<%= form_tag method: 'get', id: 'form_sort' do %>

  <div id="menu_bar">
    <div id="breadcrumb">
      <ul>
        <li><a href="/">На главную</a></li>
        <li>&raquo; Товары</li>
      </ul>
      <div class="clear"></div>
    </div>

    <%= render 'menu_nav' %>
  </div>

  <div id='items_bar'>
    <div id='sort_bar'>
      <div class='catalog'>Каталог:</div>
      <div class='filter_is_on'>Filter is on!</div>
      <div class='sort'>
        Сортировать по:

        <%= select_tag(:sort_by, options_for_select(@sort_hash),
                       class: 'sortdropdown',
                       include_blank: true) %>

      </div>
      <div class='clear'></div>
      <div class='underline'></div>

      <div class='top_products_paginator'></div>

    </div>

    <div id='items'>
      <ul>
        <div id='products_displaying'>
          <!-- Block with products... -->
        </div>
      </ul>
    </div>

    <div class='clear'></div>
    <div class='underline'></div>
    <span class='bottom_products_paginator'></span>

    <div id='spinner_loading'>
      Please wait while processing.
      <div class='process'></div>
    </div>
    <div id='spinner_loading_background'></div>
  </div>
<% end %>
<div class='clear'></div>


<script type='text/javascript'>

  setTimeout(function(){
    // Find products
    App.applyFilters();
    $('.custom-find').first().click();
  }, 1000);

  // Adding Spinner
  var spinner = new Spinner(opts).spin();
  $('#spinner_loading .process').append(spinner.el);
</script>

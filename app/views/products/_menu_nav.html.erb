<div class="menu">
  <div class="header">
    Refine Products
  </div>

  <div class="section">
    <h3>Product Type:</h3>

    <ul>
      <% Category.all.each do |category| %>
        <li>
          <label>
            <%= check_box_tag 'product[category_ids][]', category.id %>
            <%= category.name %>
          </label>
        </li>
      <% end %>
    </ul>
  </div>

  <div class="section">
    <h3>Бренды:</h3>

    <ul>
      <li>
        <label><input type="checkbox">Calvin Klein</label>
      </li>
      <li>
        <label><input type="checkbox" />Christian Dior</label>
      </li>
      <li>
        <label><input type="checkbox" />Diesel</label>
      </li>
      <li>
        <label><input type="checkbox" />Dolce & Gabbana</label>
      </li>
      <li>
        <label><input type="checkbox" />Yves Saint Laurent</label>
      </li>
      <li>
        <label><input type="checkbox" />Paco Rabanne</label>
      </li>
    </ul>
    <div class="lock_at_all">
      <a href="#">
        Все бренды.
      </a>
    </div>
  </div>

  <div class="section">
    <h3>Price:</h3>

    <ul>
      <% @price_hash.each_pair do |key, value| %>
        <% checked = false %>
        <% checked = true if key == params[:price] %>

        <li>
          <%= check_box_tag 'price_checkboxes', key, checked %>
          <%= value %>
        </li>
      <% end %>
    </ul>

  </div>
</div>
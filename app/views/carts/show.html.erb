<div id="breadcrumb">
  <ul>
    <li><a href="/"> Home </a></li>
    <li>&raquo; My Cart</li>
  </ul>
  <div class="clear"></div>
</div>

<h2>YOUR cart</h2>

<div id='cart'>
  <%= render partial: 'carts/items', locals: { items: @items } %>
</div>


<br />
<p><%= number_to_currency(@cart.total_price) %></p>
<%= button_to 'Empty Cart', cart_path(@cart.id), method: :delete, confirm: 'Are you sure?' %>

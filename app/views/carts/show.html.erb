<div id="breadcrumb">
  <ul>
    <li><a href="/"> Home </a></li>
    <li>&raquo; My Cart</li>
  </ul>
  <div class="clear"></div>
</div>

<div class="title_of_cart">Моя Корзина:</div>

<div id='my_cart'>

  <table class='table_cart'>
    <thead class='table_head'>
      <th>Товар</th>
      <th>Название</th>
      <th>Цвет</th>
      <th>Цена</th>
      <th>Количество</th>
      <th> + / - </th>
      <th>Удалить</th>
    </thead>

    <tbody id='cart'>
      <%= render partial: 'carts/items', locals: { items: @items } %>
    </tbody>
  </table>

  <div id="cart_bottom">
    <%= link_to 'Empty Cart', cart_path(@cart.id),
                method:  :delete,
                confirm: 'Are you sure?',
                class:   'empty_cart' %>

    <div id="cart_total_price">
      <%= render partial: 'carts/price', locals: { cart: @cart } %>
    </div>

    <div class='checkout'>
      <%= link_to 'Оформить заказ', new_order_path, class: 'btn_order' %>
    </div>
  </div>
</div>
<div class='back_from_cart'>
  <%= back_to_products('« Обратно к покупкам') %>
</div>

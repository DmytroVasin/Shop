<% page_title 'Welcome!' %>

<div id="rotator">
  <ol id='rotator_arrow'>
    <li><a href='#'><%= image_tag('a_prev.png', class: 'prevBigImg') %></a></li>
    <li><a href='#'><%= image_tag('a_next.png', class: 'nextBigImg') %></a></li>
  </ol>
  <ul>
    <li class='show'><%= link_to image_tag('big_free_delivery.jpg'), delivery_path %></li>
    <li><%= link_to image_tag('big_different_colors.jpg'), product_path(3) %></li>
    <li><a href='/products?brands_params%5B%5D=GUESS' ><%= image_tag('big_guess.jpg') %></a></li>
    <li><a href='/products?brands_params%5B%5D=Nike' ><%= image_tag('big_nike.jpg') %></a></li>
    <li><a href='/products?brands_params%5B%5D=Steve Madden'><%= image_tag('big_steve_madden.jpg') %></a></li>
  </ul>
</div>

<div id="leftarea">
  <div id="top_list">
    <div id="top_icon"></div>
    <%= image_tag('top_icon.jpg', id: 'top_icon_img') %>
    <a href="javascript:void(0);" class="previousproduct"></a>
    <div id='wrap'>
      <ul id="slider" style="left: 0px;">
        <%= render partial: 'new_product', locals: { new_products: @newest } %>
      </ul>
    </div>
    <a href="javascript:void(0);" class="nextproduct"></a>
  </div>
  <div class="clear"></div>
  <div class="underline_index"></div>

  <div id="new_products">
    <%= render partial: 'best_sellers', collection: @best_sellers %>
  </div>

  <div class="clear"></div>
  <div class="second underline_index"></div>
  <div class='clear'></div>
</div>
<div id="rightarea">
  <%= render 'ratings/voting_menu' %>

  <div id="remote_site">
    <!-- <div class="aboveline_blog"></div> -->
    <% (1..16).to_a.sample(4).each do |number|  %>
      <div class="aboveline_blog"></div>
      <%= image_tag('banner_'+number.to_s+'.jpg', class: 'banner') %>
    <% end %>
    <div class="underline_blog"></div>
  </div>
</div>
<div class="clear"></div>

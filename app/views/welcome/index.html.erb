<div id="rotator">
  <ul>
    <li class='show'><a href='#'><%= image_tag('big_1.jpg') %></a></li>
    <li><a href='#'><%= image_tag('big_2.jpg') %></a></li>
    <li><a href='#'><%= image_tag('big_3.jpg') %></a></li>
    <li><a href='#'><%= image_tag('big_4.jpg') %></a></li>
  </ul>
</div>

<div id="leftarea">
  <div id="top_list">
    <div id="top_icon"></div>
    <%= image_tag('top_icon.jpg', id: 'top_icon_img') %>
    <a href="javascript:void(0);" class="previousproduct"></a>
    <div id='wrap'>
      <ul id="slider" style="left: 0px;">
        <%= render partial: 'best_sellers', collection: @best_sellers %>
      </ul>
    </div>
    <a href="javascript:void(0);" class="nextproduct"></a>
  </div>
  <div class="clear"></div>
  <div class="underline_index"></div>

  <div id="new_products">
    <%= render partial: 'new_product', locals: { new_products: @newest } %>
  </div>

  <div class="clear"></div>
  <div class="second underline_index"></div>
  <div class='clear'></div>
</div>
<div id="rightarea">
  <%= render 'ratings/voting_menu' %>

  <div id="remote_site">
    <div class="aboveline_blog"></div>
    <%= image_tag('banner_'+rand(1..4).to_s+'.jpg', class: 'banner') %>
    <div class="underline_blog"></div>
  </div>
</div>
<div class="clear"></div>
<% new_products.each do |new_product| %>
  <li>
    <%= link_to image_tag( show_list_image(new_product), class: 'best_seller_image'), product_path(new_product) %>
    <div class="title"><%= truncate(new_product.title, length: 15) %></div>
    <div class="price"><span class="small">цена: </span><%= number_to_currency(new_product.price, unit: 'грн.', format: '%n %u') %></div>
  </li>
<% end %>

<!DOCTYPE html>
<html>
<head>
  <title><%= content_for?(:title) ? yield(:title) : 'Vako' %></title>
  <%= stylesheet_link_tag 'admin', media: 'all' %>
  <%= javascript_include_tag 'admin' %>
  <%= csrf_meta_tags %>
</head>

<body class = "<%= controller.controller_name %> <%= controller.action_name %>" >
  <%= render 'shared/flash_messages_for_admin' %>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <%= link_to 'К сайту', root_path, class: 'brand' %>
        <div class="nav-collapse">
          <ul class="nav">
            <li class="divider-vertical"></li>
            <li><%= link_to 'Все Продукты', admin_products_path %></li>
            <li><%= link_to 'Категории', admin_categories_path %></li>
            <li><%= link_to 'Бренды', admin_brands_path %></li>
            <li><%= link_to 'Цвет', admin_colours_path %></li>
            <li><%= link_to 'Заказы', admin_orders_path %></li>
          </ul>
          <ul class="nav pull-right">
            <li class="divider-vertical"></li>
            <li><%= link_to 'Парсер', admin_parsers_path %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="span12">
        <%= yield %>
      </div>
    </div>
  </div>
</body>
</html>

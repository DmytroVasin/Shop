<%= link_to 'Basket', cart_path(session[:cart_id]), class: 'basketimg' %>
<div class="basketcontent">
  <div class="cartItems">
    <span class="basketnum"><%= pluralize_ru(current_cart.line_items.sum(:quantity), 'Товар') %>:</span>
    <br />
    <span class="basketnum"><%= number_to_currency(current_cart.total_price, unit: 'грн.', format: '%n %u') %></span>
  </div>
  <%= link_to 'Оформить заказ', cart_path(session[:cart_id]) , class: 'btn_order paddings' %>
</div>
<div class="clear"></div>

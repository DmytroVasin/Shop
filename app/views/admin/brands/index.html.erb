<blockquote>
  <h3>Бренды:</h3>
</blockquote>

<% if @brands.any? %>
  <%= paginate @brands, window: 2 %>

  <table class="table table-striped table-bordered brand_table">
    <tr>
      <th>Brands name</th>
      <th style='width: 75px'>Actions</th>
    </tr>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= brand.name %></td>
        <td>
          <%= link_to 'Delete', admin_brand_path(brand.id), method: :delete, confirm: 'Are you sure?', class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
<%= link_to 'Add brand', new_admin_brand_path, class: 'btn btn-primary custom_black_btn' %>


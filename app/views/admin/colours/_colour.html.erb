  <tr>
    <td><%= colour.id %></td>
    <td><%= colour.name %></td>
    <td><%= rus_name colour %></td>
    <td>
      <div>
        <select data-placeholder="Выберите цвет..." class="chosen-select" multiple tabindex="4">
          <%= options_for_select(Colour::COMMON_COLORS_RUS, colour.common_colors.keys) %>
        </select>
      </div>
    </td>
    <td>
      <div>
        <select data-placeholder="Выберите материал..." class="chosen-select" multiple tabindex="4">
          <%= options_for_select(Colour::MATERIAL, colour.common_colors.keys) %>
        </select>
      </div>
    </td>
    <td>
      <div>
        <select data-placeholder="Способ закрытия..." class="chosen-select" multiple tabindex="4">
          <%= options_for_select(Colour::CLOSING_TYPE, colour.common_colors.keys) %>
        </select>
      </div>
    </td>
    <td>
      <%= link_to 'Accept', '#', class: 'btn btn-warning accept_color', data: { id: colour.id } %>
      <%= link_to 'Edit', edit_admin_colour_path(colour.id), class: 'btn btn-info' %>
    </td>
  </tr>

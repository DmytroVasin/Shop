<div class="control-group">
  <%= f.label :title, 'Title: ', class: 'control-label' %>
  <div class="controls">
    <div class="input-prepend">
      <%= f.text_field :title, id: 'inputTitle', placeholder: 'Title of perfume' %>
    </div>
  </div>
</div>

<div class="control-group">
  <%= f.label :price, 'Price: ', class: 'control-label' %>
  <div class="controls">
    <div class="input-prepend">
      <%= f.text_field :price, id: 'inputPrice', placeholder: '26.80' %>
    </div>
  </div>
</div>

<div class="control-group">
  <%= f.label :rank, 'Rank: ', class: 'control-label' %>
  <div class="controls">
    <div class="input-prepend">
      <%= f.text_field :rank, id: 'inputPrice', placeholder: '0' %>
    </div>
  </div>
</div>

<div class="control-group">
  <%= f.label :in_stock, 'In stock: ', class: 'control-label' %>
  <div class="controls">
    <%= f.check_box :in_stock, { :class => 'inputInStock' }, 'true', 'false' %>
  </div>
</div>

<div class="control-group">
  <%= f.label :gender, 'Gender: ', class: 'control-label' %>
  <div class="controls">
    <% Gender.all.each do |gender| %>
      <label class="checkbox inline">
        <%= check_box_tag 'product[gender_ids][]', gender.id, @product.gender_ids.include?(gender.id) %>
        <%= gender.gender %>
      </label>
    <% end %>
  </div>
</div>

<div class="control-group">
  <%= f.label :color, 'Color: ', class: 'control-label' %>
  <div class="controls">
    <% Color.all.each do |gender| %>
      <label class="checkbox inline">
        <%= check_box_tag 'product[color_ids][]', color.id, @product.color_ids.include?(color.id) %>
        <%= color.name %>
      </label>
    <% end %>
  </div>
</div>


<div class="control-group">
  <%= f.label :description, 'Descr. of perfume: ', class: 'control-label' %>
  <div class="controls">
    <div class="input-prepend">
      <%= f.text_area :description, id: 'text_area', placeholder: 'Description of perfume' %>
    </div>
  </div>
</div>


<div class="control-group">
  <%= f.label :category, 'Category: ', class: 'control-label' %>
  <div class="controls">
    <% Category.all.each do |category| %>
      <label class="checkbox inline">
        <%= check_box_tag 'product[category_ids][]', category.id, @product.category_ids.include?(category.id) %>
        <%= category.name %>
      </label>
    <% end %>
  </div>
</div>

<div id='drop_brand_menu' class="controls">
  <%= collection_select(:product, :brand_id, Brand.all, :id, :name, :prompt => 'Выбери бренд') %>
</div>

<div class="control-group">
  <div class="controls">
    <%= f.file_field :image %>
  </div>
</div>

<div class="control-group">
  <label for="remote_image_url" class="control-label">Remote Image: </label>
  <div class="controls">
    <%= f.text_field :remote_image_url %>
  </div>
</div>

<div class="control-group">
  <div class="controls">
    <%= f.submit 'Create', class: 'btn btn-success' %>
  </div>
</div>
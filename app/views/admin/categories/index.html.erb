<blockquote>
  <h3>Категории:</h3>
</blockquote>


<div class="category_margin">
  <% if @categories.any? %>
    <table class="table table-striped table-bordered category_table">
      <tr>
        <th>Категория ( eng )</th>
        <th>Категория ( русский ):</th>
        <th style='width: 50px'>Actions</th>
      </tr>
      <% @categories.each do |category| %>
        <tr>
          <td><strong><%= category.name %></strong></td>
          <td><strong><%= category.category_rus %></strong></td>
          <td>
            <%= link_to 'Edit', edit_admin_category_path(category.id), class: 'btn btn-warning' %>
          </td>
        </tr>
      <% end %>
    </table>
  <% end %>
  <%= link_to 'Add categories', new_admin_category_path, class: 'btn btn-primary' %>
</div>
